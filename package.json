{
  "name": "react-gridscape",
  "version": "1.0.0",
  "description": "A powerful, flexible React component library for building interactive grid-based layouts and parking lot management systems",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Smruti Ranjan Badatya <smrutiranjanbadatya2@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/iamsmruti/react-gridscape#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamsmruti/react-gridscape.git"
  },
  "bugs": {
    "url": "https://github.com/iamsmruti/react-gridscape/issues"
  },
  "keywords": [
    "react",
    "grid",
    "layout",
    "parking-lot",
    "drag-and-drop",
    "typescript",
    "ui-components",
    "interactive",
    "builder",
    "canvas",
    "spatial-design",
    "facility-management"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@uiw/react-codemirror": "^4.24.2",
    "lucide-react": "^0.539.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react --external react-dom --clean",
    "build:watch": "npm run build -- --watch",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run lint && npm run test && npm run build",
    "prepack": "npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ]
}
